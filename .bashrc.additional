# Add the following line to the end of original ".bashrc" to enable this settings.
# source ~/.bashrc.additional

alias ll='ls -lh'
alias la='ls -lA'
alias trash='gio trash'

PS1='\w\[\033[36m\]$(__git_ps1 " (%s)")\[\033[0m\]\$ '
HISTSIZE=10000
HISTIGNORE=ls:history

if [[ -t 0 ]]; then
    stty stop undef
    stty start undef
fi

